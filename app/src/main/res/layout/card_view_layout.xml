<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="23dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:id="@+id/cardPost"
    card_view:cardBackgroundColor="#EAE4E4"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewKitapAdiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Kitap İsmi: "
                    android:textStyle="bold"
                    android:layout_gravity="end"/>

                <TextView
                    android:id="@+id/textViewYazarAdiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:text="Yazar İsmi: "
                    android:textStyle="bold"
                    android:layout_gravity="end"/>
                <TextView
                    android:id="@+id/textViewSehirText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:text="Şehir: "
                    android:textStyle="bold"
                    android:layout_gravity="end"></TextView>
                <TextView
                    android:id="@+id/textViewYorumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Okur Yorumu: "
                    android:textStyle="bold"
                    android:layout_gravity="end"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewKitapAdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Kitap İsmi" />

                <TextView
                    android:id="@+id/textViewYazarAdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:text="Yazar İsmi"/>
                <TextView
                    android:id="@+id/textViewSehir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:text="Şehir"></TextView>
                <TextView
                    android:id="@+id/textViewYorum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Okur Yorumu Yok"></TextView>


            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/imageViewKitapResim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/ic_launcher_background"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"></ImageView>
    </LinearLayout>



</androidx.cardview.widget.CardView>